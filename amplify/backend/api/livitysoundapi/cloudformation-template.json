{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Metadata": {},
    "Parameters": {
        "AppSyncApiName": {
            "Type": "String",
            "Description": "The name of the AppSync API",
            "Default": "AppSyncSimpleTransform"
        },
        "DynamoDBModelTableReadIOPS": {
            "Type": "Number",
            "Description": "The number of read IOPS the table should support.",
            "Default": 5
        },
        "DynamoDBModelTableWriteIOPS": {
            "Type": "Number",
            "Description": "The number of write IOPS the table should support.",
            "Default": 5
        },
        "ResolverBucket": {
            "Type": "String",
            "Description": "The name of the bucket containing the resolver templates"
        },
        "ResolverRootKey": {
            "Type": "String",
            "Description": "The s3 key of the folder containing the resolver templates in format {Type}.{Field}.[response|request].{Timestamp}"
        },
        "DeploymentTimestamp": {
            "Type": "String",
            "Description": "The timestamp used to identify thie most recent version of the resolver templates in s3."
        },
        "schemaGraphql": {
            "Type": "String",
            "Description": "The S3 location for the Schema: schema.graphql"
        }
    },
    "Resources": {
        "GraphQLSchema": {
            "Type": "AWS::AppSync::GraphQLSchema",
            "Properties": {
                "ApiId": {
                    "Fn::GetAtt": [
                        "GraphQLAPI",
                        "ApiId"
                    ]
                },
                "DefinitionS3Location": {
                    "Ref": "schemaGraphql"
                }
            }
        },
        "GraphQLAPI": {
            "Type": "AWS::AppSync::GraphQLApi",
            "Properties": {
                "Name": {
                    "Ref": "AppSyncApiName"
                },
                "AuthenticationType": "API_KEY"
            }
        },
        "GraphQLAPIKey": {
            "Type": "AWS::AppSync::ApiKey",
            "Properties": {
                "ApiId": {
                    "Fn::GetAtt": [
                        "GraphQLAPI",
                        "ApiId"
                    ]
                }
            }
        },
        "ReleaseTable": {
            "Type": "AWS::DynamoDB::Table",
            "Properties": {
                "TableName": {
                    "Fn::Join": [
                        "-",
                        [
                            "Release",
                            {
                                "Fn::GetAtt": [
                                    "GraphQLAPI",
                                    "ApiId"
                                ]
                            }
                        ]
                    ]
                },
                "KeySchema": [
                    {
                        "AttributeName": "id",
                        "KeyType": "HASH"
                    }
                ],
                "AttributeDefinitions": [
                    {
                        "AttributeName": "id",
                        "AttributeType": "S"
                    }
                ],
                "ProvisionedThroughput": {
                    "ReadCapacityUnits": {
                        "Ref": "DynamoDBModelTableReadIOPS"
                    },
                    "WriteCapacityUnits": {
                        "Ref": "DynamoDBModelTableWriteIOPS"
                    }
                },
                "StreamSpecification": {
                    "StreamViewType": "NEW_AND_OLD_IMAGES"
                }
            }
        },
        "ReleaseIAMRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "RoleName": {
                    "Fn::Join": [
                        "-",
                        [
                            "ReleaseTable",
                            "role",
                            {
                                "Fn::GetAtt": [
                                    "GraphQLAPI",
                                    "ApiId"
                                ]
                            }
                        ]
                    ]
                },
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": "appsync.amazonaws.com"
                            },
                            "Action": "sts:AssumeRole"
                        }
                    ]
                },
                "Policies": [
                    {
                        "PolicyName": "DynamoDBAccess",
                        "PolicyDocument": {
                            "Version": "2012-10-17",
                            "Statement": [
                                {
                                    "Effect": "Allow",
                                    "Action": [
                                        "dynamodb:BatchGetItem",
                                        "dynamodb:BatchWriteItem",
                                        "dynamodb:PutItem",
                                        "dynamodb:DeleteItem",
                                        "dynamodb:GetItem",
                                        "dynamodb:Scan",
                                        "dynamodb:Query",
                                        "dynamodb:UpdateItem"
                                    ],
                                    "Resource": [
                                        {
                                            "Fn::GetAtt": [
                                                "ReleaseTable",
                                                "Arn"
                                            ]
                                        },
                                        {
                                            "Fn::Join": [
                                                "/",
                                                [
                                                    {
                                                        "Fn::GetAtt": [
                                                            "ReleaseTable",
                                                            "Arn"
                                                        ]
                                                    },
                                                    "*"
                                                ]
                                            ]
                                        }
                                    ]
                                }
                            ]
                        }
                    }
                ]
            }
        },
        "ReleaseDataSource": {
            "Type": "AWS::AppSync::DataSource",
            "Properties": {
                "ApiId": {
                    "Fn::GetAtt": [
                        "GraphQLAPI",
                        "ApiId"
                    ]
                },
                "Name": "ReleaseTable",
                "Type": "AMAZON_DYNAMODB",
                "ServiceRoleArn": {
                    "Fn::GetAtt": [
                        "ReleaseIAMRole",
                        "Arn"
                    ]
                },
                "DynamoDBConfig": {
                    "AwsRegion": {
                        "Fn::Select": [
                            3,
                            {
                                "Fn::Split": [
                                    ":",
                                    {
                                        "Fn::GetAtt": [
                                            "ReleaseTable",
                                            "Arn"
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    "TableName": {
                        "Ref": "ReleaseTable"
                    }
                }
            },
            "DependsOn": [
                "ReleaseTable",
                "ReleaseIAMRole"
            ]
        },
        "GetReleaseResolver": {
            "Type": "AWS::AppSync::Resolver",
            "Properties": {
                "ApiId": {
                    "Fn::GetAtt": [
                        "GraphQLAPI",
                        "ApiId"
                    ]
                },
                "DataSourceName": {
                    "Fn::GetAtt": [
                        "ReleaseDataSource",
                        "Name"
                    ]
                },
                "FieldName": "getRelease",
                "TypeName": "Query",
                "RequestMappingTemplateS3Location": {
                    "Fn::Join": [
                        "",
                        [
                            "s3://",
                            {
                                "Fn::Join": [
                                    "/",
                                    [
                                        {
                                            "Ref": "ResolverBucket"
                                        },
                                        {
                                            "Ref": "ResolverRootKey"
                                        },
                                        {
                                            "Fn::Join": [
                                                ".",
                                                [
                                                    "Query",
                                                    "getRelease",
                                                    "request",
                                                    {
                                                        "Ref": "DeploymentTimestamp"
                                                    }
                                                ]
                                            ]
                                        }
                                    ]
                                ]
                            }
                        ]
                    ]
                },
                "ResponseMappingTemplateS3Location": {
                    "Fn::Join": [
                        "",
                        [
                            "s3://",
                            {
                                "Fn::Join": [
                                    "/",
                                    [
                                        {
                                            "Ref": "ResolverBucket"
                                        },
                                        {
                                            "Ref": "ResolverRootKey"
                                        },
                                        {
                                            "Fn::Join": [
                                                ".",
                                                [
                                                    "Query",
                                                    "getRelease",
                                                    "response",
                                                    {
                                                        "Ref": "DeploymentTimestamp"
                                                    }
                                                ]
                                            ]
                                        }
                                    ]
                                ]
                            }
                        ]
                    ]
                }
            },
            "DependsOn": "GraphQLSchema"
        },
        "ListReleaseResolver": {
            "Type": "AWS::AppSync::Resolver",
            "Properties": {
                "ApiId": {
                    "Fn::GetAtt": [
                        "GraphQLAPI",
                        "ApiId"
                    ]
                },
                "DataSourceName": {
                    "Fn::GetAtt": [
                        "ReleaseDataSource",
                        "Name"
                    ]
                },
                "FieldName": "listReleases",
                "TypeName": "Query",
                "RequestMappingTemplateS3Location": {
                    "Fn::Join": [
                        "",
                        [
                            "s3://",
                            {
                                "Fn::Join": [
                                    "/",
                                    [
                                        {
                                            "Ref": "ResolverBucket"
                                        },
                                        {
                                            "Ref": "ResolverRootKey"
                                        },
                                        {
                                            "Fn::Join": [
                                                ".",
                                                [
                                                    "Query",
                                                    "listReleases",
                                                    "request",
                                                    {
                                                        "Ref": "DeploymentTimestamp"
                                                    }
                                                ]
                                            ]
                                        }
                                    ]
                                ]
                            }
                        ]
                    ]
                },
                "ResponseMappingTemplateS3Location": {
                    "Fn::Join": [
                        "",
                        [
                            "s3://",
                            {
                                "Fn::Join": [
                                    "/",
                                    [
                                        {
                                            "Ref": "ResolverBucket"
                                        },
                                        {
                                            "Ref": "ResolverRootKey"
                                        },
                                        {
                                            "Fn::Join": [
                                                ".",
                                                [
                                                    "Query",
                                                    "listReleases",
                                                    "response",
                                                    {
                                                        "Ref": "DeploymentTimestamp"
                                                    }
                                                ]
                                            ]
                                        }
                                    ]
                                ]
                            }
                        ]
                    ]
                }
            },
            "DependsOn": "GraphQLSchema"
        },
        "CreateReleaseResolver": {
            "Type": "AWS::AppSync::Resolver",
            "Properties": {
                "ApiId": {
                    "Fn::GetAtt": [
                        "GraphQLAPI",
                        "ApiId"
                    ]
                },
                "DataSourceName": {
                    "Fn::GetAtt": [
                        "ReleaseDataSource",
                        "Name"
                    ]
                },
                "FieldName": "createRelease",
                "TypeName": "Mutation",
                "RequestMappingTemplateS3Location": {
                    "Fn::Join": [
                        "",
                        [
                            "s3://",
                            {
                                "Fn::Join": [
                                    "/",
                                    [
                                        {
                                            "Ref": "ResolverBucket"
                                        },
                                        {
                                            "Ref": "ResolverRootKey"
                                        },
                                        {
                                            "Fn::Join": [
                                                ".",
                                                [
                                                    "Mutation",
                                                    "createRelease",
                                                    "request",
                                                    {
                                                        "Ref": "DeploymentTimestamp"
                                                    }
                                                ]
                                            ]
                                        }
                                    ]
                                ]
                            }
                        ]
                    ]
                },
                "ResponseMappingTemplateS3Location": {
                    "Fn::Join": [
                        "",
                        [
                            "s3://",
                            {
                                "Fn::Join": [
                                    "/",
                                    [
                                        {
                                            "Ref": "ResolverBucket"
                                        },
                                        {
                                            "Ref": "ResolverRootKey"
                                        },
                                        {
                                            "Fn::Join": [
                                                ".",
                                                [
                                                    "Mutation",
                                                    "createRelease",
                                                    "response",
                                                    {
                                                        "Ref": "DeploymentTimestamp"
                                                    }
                                                ]
                                            ]
                                        }
                                    ]
                                ]
                            }
                        ]
                    ]
                }
            },
            "DependsOn": "GraphQLSchema"
        },
        "UpdateReleaseResolver": {
            "Type": "AWS::AppSync::Resolver",
            "Properties": {
                "ApiId": {
                    "Fn::GetAtt": [
                        "GraphQLAPI",
                        "ApiId"
                    ]
                },
                "DataSourceName": {
                    "Fn::GetAtt": [
                        "ReleaseDataSource",
                        "Name"
                    ]
                },
                "FieldName": "updateRelease",
                "TypeName": "Mutation",
                "RequestMappingTemplateS3Location": {
                    "Fn::Join": [
                        "",
                        [
                            "s3://",
                            {
                                "Fn::Join": [
                                    "/",
                                    [
                                        {
                                            "Ref": "ResolverBucket"
                                        },
                                        {
                                            "Ref": "ResolverRootKey"
                                        },
                                        {
                                            "Fn::Join": [
                                                ".",
                                                [
                                                    "Mutation",
                                                    "updateRelease",
                                                    "request",
                                                    {
                                                        "Ref": "DeploymentTimestamp"
                                                    }
                                                ]
                                            ]
                                        }
                                    ]
                                ]
                            }
                        ]
                    ]
                },
                "ResponseMappingTemplateS3Location": {
                    "Fn::Join": [
                        "",
                        [
                            "s3://",
                            {
                                "Fn::Join": [
                                    "/",
                                    [
                                        {
                                            "Ref": "ResolverBucket"
                                        },
                                        {
                                            "Ref": "ResolverRootKey"
                                        },
                                        {
                                            "Fn::Join": [
                                                ".",
                                                [
                                                    "Mutation",
                                                    "updateRelease",
                                                    "response",
                                                    {
                                                        "Ref": "DeploymentTimestamp"
                                                    }
                                                ]
                                            ]
                                        }
                                    ]
                                ]
                            }
                        ]
                    ]
                }
            },
            "DependsOn": "GraphQLSchema"
        },
        "DeleteReleaseResolver": {
            "Type": "AWS::AppSync::Resolver",
            "Properties": {
                "ApiId": {
                    "Fn::GetAtt": [
                        "GraphQLAPI",
                        "ApiId"
                    ]
                },
                "DataSourceName": {
                    "Fn::GetAtt": [
                        "ReleaseDataSource",
                        "Name"
                    ]
                },
                "FieldName": "deleteRelease",
                "TypeName": "Mutation",
                "RequestMappingTemplateS3Location": {
                    "Fn::Join": [
                        "",
                        [
                            "s3://",
                            {
                                "Fn::Join": [
                                    "/",
                                    [
                                        {
                                            "Ref": "ResolverBucket"
                                        },
                                        {
                                            "Ref": "ResolverRootKey"
                                        },
                                        {
                                            "Fn::Join": [
                                                ".",
                                                [
                                                    "Mutation",
                                                    "deleteRelease",
                                                    "request",
                                                    {
                                                        "Ref": "DeploymentTimestamp"
                                                    }
                                                ]
                                            ]
                                        }
                                    ]
                                ]
                            }
                        ]
                    ]
                },
                "ResponseMappingTemplateS3Location": {
                    "Fn::Join": [
                        "",
                        [
                            "s3://",
                            {
                                "Fn::Join": [
                                    "/",
                                    [
                                        {
                                            "Ref": "ResolverBucket"
                                        },
                                        {
                                            "Ref": "ResolverRootKey"
                                        },
                                        {
                                            "Fn::Join": [
                                                ".",
                                                [
                                                    "Mutation",
                                                    "deleteRelease",
                                                    "response",
                                                    {
                                                        "Ref": "DeploymentTimestamp"
                                                    }
                                                ]
                                            ]
                                        }
                                    ]
                                ]
                            }
                        ]
                    ]
                }
            },
            "DependsOn": "GraphQLSchema"
        }
    },
    "Outputs": {
        "GraphQLAPIIdOutput": {
            "Description": "Your GraphQL API ID.",
            "Value": {
                "Fn::GetAtt": [
                    "GraphQLAPI",
                    "ApiId"
                ]
            },
            "Export": {
                "Name": {
                    "Fn::Join": [
                        ":",
                        [
                            {
                                "Ref": "AWS::StackName"
                            },
                            "GraphQLApiId"
                        ]
                    ]
                }
            }
        },
        "GraphQLAPIEndpointOutput": {
            "Description": "Your GraphQL API endpoint.",
            "Value": {
                "Fn::GetAtt": [
                    "GraphQLAPI",
                    "GraphQLUrl"
                ]
            },
            "Export": {
                "Name": {
                    "Fn::Join": [
                        ":",
                        [
                            {
                                "Ref": "AWS::StackName"
                            },
                            "GraphQLApiEndpoint"
                        ]
                    ]
                }
            }
        },
        "GraphQLAPIKeyOutput": {
            "Description": "Your GraphQL API key. Provide via 'x-api-key' header.",
            "Value": {
                "Fn::GetAtt": [
                    "GraphQLAPIKey",
                    "ApiKey"
                ]
            },
            "Export": {
                "Name": {
                    "Fn::Join": [
                        ":",
                        [
                            {
                                "Ref": "AWS::StackName"
                            },
                            "GraphQLApiKey"
                        ]
                    ]
                }
            }
        }
    }
}